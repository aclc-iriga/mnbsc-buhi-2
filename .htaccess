RewriteEngine On
RewriteBase /mnbsc-buhi-2/

# Exclude assets from rewrite rule
RewriteCond %{REQUEST_URI} !\.(css|js|svg|jpg|jpeg|png|gif|woff2|ico|ttf)$ [NC]

# Redirect all requests to index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /mnbsc-buhi-2/public/index.html [L]

# Exclude the public and app directories from the rewrite rule
RewriteCond %{REQUEST_URI} !^/mnbsc-buhi-2/public/
RewriteCond %{REQUEST_URI} !^/mnbsc-buhi-2/app/
RewriteRule ^(.*)$ /mnbsc-buhi-2/public/$1 [L]
